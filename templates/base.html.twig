<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}InventoryManager{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
            integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/inventory.css') }}">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">InvManager</a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navContent">
                    <div class="navbar-nav ms-lg-3 gap-lg-2">
                        <a href="{{ path('app_home') }}" class="nav-link-custom {{ app.request.attributes.get('_route') == 'app_home' ? 'active' : '' }}">
                            {{ 'nav.home'|trans }}
                        </a>
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_my_inventories') }}" class="nav-link-custom {{ app.request.attributes.get('_route') == 'app_my_inventories' ? 'active' : '' }}">
                                {{ 'nav.profile'|trans }}
                            </a>
                        {% endif %}
                    </div>

                    <div class="ms-auto d-flex flex-column flex-lg-row align-items-lg-center gap-3 mt-3 mt-lg-0">

                        <form action="{{ path('app_inventory_search') }}" method="GET" class="ms-lg-auto mb-3 mb-lg-0">
                            <div class="search-wrapper bg-light rounded-pill">
                                <i class="bi bi-search search-icon"></i>
                                <input type="text" name="q" class="search-input bg-transparent"
                                       placeholder="{{ 'search.placeholder'|trans }}"
                                       value="{{ app.request.query.get('q') }}">
                            </div>
                        </form>

                        <div class="d-flex align-items-center gap-2">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle rounded-pill px-3" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-globe me-1"></i> {{ app.request.locale|upper }}
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                    <li><a class="dropdown-item" href="{{ path('change_locale', {locale: 'en'}) }}">English</a></li>
                                    <li><a class="dropdown-item" href="{{ path('change_locale', {locale: 'es'}) }}">Espa√±ol</a></li>
                                </ul>
                            </div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-outline-secondary px-3 rounded-pill">
                                    {{ 'nav.admin_dashboard'|trans }}
                            {% endif %}
                            {% if app.user %}
                                <a href="{{ path('app_logout') }}" class="nav-link-custom logout-link">{{ 'nav.logout'|trans }}</a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="nav-link-custom">{{ 'nav.login'|trans }}</a>
                                <a href="{{ path('app_register') }}" class="btn btn-sm btn-dark px-3 rounded-pill">{{ 'nav.join_free'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <main class="container">
            {% block body %}{% endblock %}
        </main>

        <button type="button" class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-4 shadow-lg"
                style="width: 60px; height: 60px; z-index: 1050;"
                data-bs-toggle="modal" data-bs-target="#supportModal">
            <i class="bi bi-question-lg fs-3"></i>
        </button>

        <div class="modal fade" id="supportModal" tabindex="-1" aria-labelledby="supportModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="supportModalLabel"><i class="bi bi-ticket-perforated me-2"></i>Create Support Ticket</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="supportSummary" class="form-label fw-bold">Summary</label>
                            <textarea id="supportSummary" class="form-control" rows="3" placeholder="Describe the issue..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="supportPriority" class="form-label fw-bold">Priority</label>
                            <select id="supportPriority" class="form-select">
                                <option value="Low">Low</option>
                                <option value="Average" selected>Average</option>
                                <option value="High">High</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="submitSupportTicket()">Submit Ticket</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
        {% block javascripts %}
            <script>
                function submitSupportTicket() {
                    const summary = document.getElementById('supportSummary').value;
                    const priority = document.getElementById('supportPriority').value;

                    if (!summary) {
                        alert('Please enter a summary.');
                        return;
                    }

                    const data = {
                        summary: summary,
                        priority: priority,
                        current_url: window.location.href,
                        inventory_title: "{{ inventory.title|default('N/A') }}"
                    };

                    fetch("{{ path('app_support_ticket') }}", {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    })
                    .then(response => response.json())
                    .then(result => {
                        if (result.status === 'success') {
                            alert('Ticket JSON uploaded to Dropbox!');
                            const modalElement = document.getElementById('supportModal');
                            const modal = bootstrap.Modal.getInstance(modalElement);
                            modal.hide();
                            document.getElementById('supportSummary').value = '';
                        } else {
                            alert('Error sending ticket.');
                        }
                    })
                    .catch(error => console.error('Error:', error));
                }
            </script>
        {% endblock %}
    </body>
</html>