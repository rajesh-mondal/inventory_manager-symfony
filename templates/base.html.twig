<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}InventoryManager{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/inventory.css') }}">

        <style>
            body { font-family: 'Inter', sans-serif; background-color: #f8f9fa; }
            .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.08); }
            .card { border: none; box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); border-radius: 12px; }
            .btn-primary { border-radius: 8px; padding: 10px 20px; font-weight: 600; }
        </style>

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">InvManager</a>

                <form action="{{ path('app_inventory_search') }}" method="GET" class="ms-auto d-none d-md-flex search-wrapper" style="width: 300px;">
                    <div class="position-relative w-100">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text"
                               name="q"
                               class="form-control ps-5 border-0 bg-light"
                               placeholder="Global search..."
                               style="border-radius: 10px; font-size: 0.9rem;"
                               value="{{ app.request.query.get('q') }}">
                    </div>
                </form>

                <div class="ms-3 d-flex align-items-center">
                    {% if app.user %}
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_my_inventories') }}" class="btn btn-sm btn-dark px-3 rounded-pill me-2">My Inventories</a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-outline-dark px-3 rounded-pill me-2">Admin Dashboard</a>
                        {% endif %}
                        <a href="{{ path('app_logout') }}" class="text-muted small text-decoration-none">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="text-muted small text-decoration-none me-3">Login</a>
                        <a href="{{ path('app_register') }}" class="btn btn-sm btn-dark px-3 rounded-pill">Join Free</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <main class="container">
            {% block body %}{% endblock %}
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>