{% extends 'base.html.twig' %}

{% block title %}Home - Inventory Manager{% endblock %}

{% block body %}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title mb-0">{{ 'home.latest_title'|trans }}</h2>

                <form action="{{ path('app_inventory_search') }}" method="GET">
                    <div class="search-wrapper border bg-white rounded-3">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" name="q" class="search-input bg-transparent"
                               placeholder="{{ 'home.search_placeholder'|trans }}">
                    </div>
                </form>
            </div>

            <div class="table-container">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>{{ 'table.name'|trans }}</th>
                                {# <th>Tags</th> #}
                                <th class="d-none d-md-table-cell">{{ 'table.category'|trans }}</th>
                                <th class="text-end pe-4">{{ 'table.creator'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for inv in latest %}
                            <tr class="inventory-row">
                                <td>
                                    <div class="d-flex flex-column">
                                        <a href="{{ path('app_inventory_show', {id: inv.id}) }}" class="inventory-link">{{ inv.title }}</a>
                                        <span class="text-muted small mt-1 d-inline-block text-truncate">
                                            {{ inv.description|default('home.no_description'|trans)|slice(0, 50) }}...
                                        </span>
                                    </div>
                                </td>
                                {# <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for tag in inv.tags %}
                                            <span class="badge rounded-pill bg-white text-muted border extra-small">#{{ tag }}</span>
                                        {% endfor %}
                                    </div>
                                </td> #}
                                <td class="d-none d-md-table-cell">
                                    <span class="badge-category">{{ inv.category ? inv.category.name : 'home.no_category'|trans }}</span>
                                </td>
                                <td class="text-end text-muted small pe-4">
                                    {{ inv.creator.email|split('@')[0] }}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="table-footer">
                    <a href="{{ path('app_inventory_search') }}" class="view-all-link">
                        {{ 'home.explore_all'|trans }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="sidebar-card shadow-sm">
                <h2 class="section-title">{{ 'home.tag_cloud'|trans }}</h2>
                <div class="d-flex flex-wrap gap-2">
                    {% for tag, count in tags %}
                        <a href="{{ path('app_inventory_search', {tag: tag}) }}"
                           class="badge rounded-pill bg-light text-muted border text-decoration-none px-3 py-2"
                           style="font-size: {{ 0.7 + (count * 0.05) }}rem;">
                           #{{ tag }}
                        </a>
                    {% endfor %}
                </div>
            </div>

            <div class="sidebar-card">
                <h2 class="section-title">{{ 'home.popular_title'|trans }}</h2>
                <div class="list-group list-group-flush">
                    {% for inv in popular %}
                        <a href="{{ path('app_inventory_show', {id: inv.id}) }}" class="list-group-item list-group-item-action border-0 px-0 d-flex justify-content-between align-items-center">
                            <span class="inventory-link" style="font-size: 0.9rem;">{{ inv.title }}</span>
                            <span class="badge bg-light text-primary border" style="font-size: 0.75rem;">{{ inv.items|length }} {{ 'home.items_count'|trans }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}