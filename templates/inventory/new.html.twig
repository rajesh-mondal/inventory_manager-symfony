{% extends 'base.html.twig' %}

{% block title %}Create New Inventory{% endblock %}

{% block body %}
<style>
    body { background-color: #f9fafb; }

    .form-container {
        background: #fff;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        padding: 3rem;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.6rem;
        display: block;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.2s ease;
        background-color: #fcfcfc;
    }

    .form-control:focus, .form-select:focus {
        border-color: #111827;
        box-shadow: 0 0 0 4px rgba(17, 24, 39, 0.05);
        background-color: #fff;
        outline: none;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111827;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        padding-bottom: 0.75rem;
    }

    .btn-save {
        background-color: #111827;
        color: #fff;
        border-radius: 10px;
        padding: 0.8rem 2.5rem;
        font-weight: 600;
        border: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-save:hover { background-color: #000; transform: translateY(-1px); }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-10">

            <div class="mb-4 d-flex justify-content-between align-items-end">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="{{ path('app_my_inventories') }}" class="text-decoration-none text-muted small">Inventories</a></li>
                            <li class="breadcrumb-item active small">Create New</li>
                        </ol>
                    </nav>
                    <h1 class="fw-bold text-dark mb-0">New Inventory</h1>
                </div>
                <a href="{{ path('app_my_inventories') }}" class="btn btn-link text-muted text-decoration-none small">
                    <i class="bi bi-x-lg"></i> Discard
                </a>
            </div>

            <div class="form-container">
                <form method="POST">
                    <div class="row g-5">
                        <div class="col-md-6">
                            <h3 class="section-title">General Info</h3>

                            <div class="mb-4">
                                <label for="title" class="form-label">Inventory Name</label>
                                <input type="text" name="title" id="title" class="form-control" placeholder="e.g. Photography Gear" required>
                                <div class="form-text mt-2 small text-muted">Give your collection a unique, recognizable name.</div>
                            </div>

                            <div class="mb-0">
                                <label for="category" class="form-label">Category</label>
                                <select name="category" id="category" class="form-select">
                                    <option value="Electronics">Electronics</option>
                                    <option value="Furniture">Furniture</option>
                                    <option value="Tools">Tools</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h3 class="section-title">Details</h3>

                            <div class="mb-4">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" id="description" class="form-control" rows="6" placeholder="What kind of items will you store here? Mention location or purpose..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="border-top mt-5 pt-4 d-flex justify-content-end">
                        <button type="submit" class="btn-save">
                            Save Inventory
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}