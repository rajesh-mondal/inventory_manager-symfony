{% extends 'base.html.twig' %}

{% block title %}Create New Inventory{% endblock %}

{% block body %}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-10">

            <div class="mb-4 d-flex justify-content-between align-items-end">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="{{ path('app_my_inventories') }}" class="text-decoration-none text-muted small">
                                {{ 'inventory_form.create_new'|trans }}
                            </a></li>
                            <li class="breadcrumb-item active small"></li>
                        </ol>
                    </nav>
                    <h1 class="fw-bold text-dark mb-0">{{ 'dashboard.new_inventory'|trans }}</h1>
                </div>
                <a href="{{ path('app_my_inventories') }}" class="btn btn-link text-muted text-decoration-none small">
                    <i class="bi bi-x-lg"></i> {{ 'inventory_form.discard'|trans }}
                </a>
            </div>

            <div class="form-container">
                <form method="POST">
                    <div class="row g-5">
                        <div class="col-md-6">
                            <h3 class="section-title">{{ 'inventory_form.general_info'|trans }}</h3>
                            <div class="mb-4">
                                <label class="form-label">{{ 'inventory_form.title_label'|trans }}</label>
                                <input type="text" name="title" class="form-control" placeholder="{{ 'inventory_form.title_placeholder'|trans }}" required>
                            </div>
                            <div class="mb-4">
                                <label for="category">{{ 'table.category'|trans }}</label>
                                <select name="category" id="category" class="form-select">
                                    <option value="">{{ 'inventory_form.select_category'|trans }}</option>
                                    {% for cat in categories %}
                                        <option value="{{ cat.id }}">{{ cat.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">{{ 'inventory_form.id_pattern'|trans }}</label>
                                <input type="text" name="id_pattern" class="form-control" placeholder="ITEM-{SEQ}">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">{{ 'inventory_form.tags_label'|trans }}</label>
                                <input type="text" name="tags" class="form-control" placeholder="e.g. vintage, collection, 2025">
                                <div class="form-text small text-muted">{{ 'inventory_form.tags_help'|trans }}</div>
                            </div>
                            <div class="form-check form-switch mb-4">
                                <input class="form-check-input" type="checkbox" name="is_public" id="isPublic">
                                <label class="form-check-label fw-bold" for="isPublic">{{ 'inventory_form.is_public'|trans }}</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h3 class="section-title">{{ 'inventory_form.custom_fields_title'|trans }}</h3>
                            <p class="small text-muted mb-4">{{ 'inventory_form.custom_fields_help'|trans }}</p>

                            {% for type in ['String', 'Int', 'Bool', 'Text'] %}
                                <div class="mb-4 p-3 border rounded bg-light">
                                    <h6 class="fw-bold text-uppercase small mb-3 text-primary">{{ type }} Fields</h6>
                                    {% for i in 1..3 %}
                                        <div class="input-group mb-2">
                                            <div class="input-group-text">
                                                <input class="form-check-input mt-0"
                                                       type="checkbox"
                                                       name="custom_{{ type|lower }}{{ i }}_state"
                                                       id="check_{{ type|lower }}{{ i }}">
                                            </div>
                                            <input type="text"
                                                   name="custom_{{ type|lower }}{{ i }}_name"
                                                   class="form-control form-control-sm"
                                                   placeholder="Label for {{ type }} {{ i }} (e.g. {{ type == 'Int' ? 'Price' : 'Color' }})">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mb-4 mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <label class="form-label fw-bold small mb-0">{{ 'inventory_form.description_label'|trans }}</label>
                            <span class="text-muted" style="font-size: 0.75rem;">
                                <i class="bi bi-markdown me-1"></i>
                                {{ 'inventory_form.markdown_support'|trans }}
                            </span>
                        </div>
                        <textarea name="description"
                                  class="form-control"
                                  rows="5"
                                  placeholder="{{ 'inventory_form.description_placeholder'|trans }}"
                                  style="font-size: 0.9rem;">
                        </textarea>
                        <div class="form-text mt-2" style="font-size: 0.75rem;">
                            {{ 'inventory_form.markdown_help'|trans }}
                        </div>
                    </div>

                    <div class="border-top mt-5 pt-4 d-flex justify-content-end">
                        <button type="submit" class="btn-save">{{ 'inventory_form.submit_create'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}