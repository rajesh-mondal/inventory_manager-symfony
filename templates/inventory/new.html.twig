{% extends 'base.html.twig' %}

{% block title %}Create New Inventory{% endblock %}

{% block body %}
<style>
    body { background-color: #f9fafb; }

    .form-container {
        background: #fff;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        padding: 3rem;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.6rem;
        display: block;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.2s ease;
        background-color: #fcfcfc;
    }

    .form-control:focus, .form-select:focus {
        border-color: #111827;
        box-shadow: 0 0 0 4px rgba(17, 24, 39, 0.05);
        background-color: #fff;
        outline: none;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111827;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        padding-bottom: 0.75rem;
    }

    .btn-save {
        background-color: #111827;
        color: #fff;
        border-radius: 10px;
        padding: 0.8rem 2.5rem;
        font-weight: 600;
        border: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-save:hover { background-color: #000; transform: translateY(-1px); }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-10">

            <div class="mb-4 d-flex justify-content-between align-items-end">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="{{ path('app_my_inventories') }}" class="text-decoration-none text-muted small">Inventories</a></li>
                            <li class="breadcrumb-item active small">Create New</li>
                        </ol>
                    </nav>
                    <h1 class="fw-bold text-dark mb-0">New Inventory</h1>
                </div>
                <a href="{{ path('app_my_inventories') }}" class="btn btn-link text-muted text-decoration-none small">
                    <i class="bi bi-x-lg"></i> Discard
                </a>
            </div>

            <div class="form-container">
                <form method="POST">
                    <div class="row g-5">
                        <div class="col-md-6">
                            <h3 class="section-title">General Info</h3>
                            <div class="mb-4">
                                <label class="form-label">Inventory Name</label>
                                <input type="text" name="title" class="form-control" placeholder="e.g. Photography Gear" required>
                            </div>
                            <div class="mb-4">
                                <label for="category">Category</label>
                                <select name="category" id="category" class="form-select">
                                    <option value="">Select a category</option>
                                    {% for cat in categories %}
                                        <option value="{{ cat.id }}">{{ cat.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">ID Pattern (e.g. PART-{YEAR}-{SEQ})</label>
                                <input type="text" name="id_pattern" class="form-control" placeholder="ITEM-{SEQ}">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Tags (separated by commas)</label>
                                <input type="text" name="tags" class="form-control" placeholder="e.g. vintage, collection, 2025">
                                <div class="form-text small text-muted">Example: electronics, office, tools</div>
                            </div>
                            <div class="form-check form-switch mb-4">
                                <input class="form-check-input" type="checkbox" name="is_public" id="isPublic">
                                <label class="form-check-label fw-bold" for="isPublic">Make Publicly Viewable</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h3 class="section-title">Custom Fields (Template)</h3>
                            <p class="small text-muted mb-4">Enable fields you want to track for items in this inventory.</p>

                            {% for type in ['String', 'Int', 'Bool', 'Text'] %}
                                <div class="mb-4 p-3 border rounded bg-light">
                                    <h6 class="fw-bold text-uppercase small mb-3 text-primary">{{ type }} Fields</h6>
                                    {% for i in 1..3 %}
                                        <div class="input-group mb-2">
                                            <div class="input-group-text">
                                                <input class="form-check-input mt-0"
                                                       type="checkbox"
                                                       name="custom_{{ type|lower }}{{ i }}_state"
                                                       id="check_{{ type|lower }}{{ i }}">
                                            </div>
                                            <input type="text"
                                                   name="custom_{{ type|lower }}{{ i }}_name"
                                                   class="form-control form-control-sm"
                                                   placeholder="Label for {{ type }} {{ i }} (e.g. {{ type == 'Int' ? 'Price' : 'Color' }})">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mb-4 mt-4">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3" placeholder="What kind of items will you store here? Mention location or purpose..."></textarea>
                    </div>

                    <div class="border-top mt-5 pt-4 d-flex justify-content-end">
                        <button type="submit" class="btn-save">Create Inventory Template</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}