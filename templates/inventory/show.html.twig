{% extends 'base.html.twig' %}

{% block body %}
<div class="mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_my_inventories') }}">My Inventories</a></li>
            <li class="breadcrumb-item active">{{ inventory.title }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">{{ inventory.title }}</h1>
            <p class="text-muted">{{ inventory.category }} | {{ inventory.description }}</p>
        </div>
        <button class="btn btn-primary">+ Add New Item</button>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">Items in this Inventory</h5>
        </div>
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Item Name</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                {% for item in inventory.items %}
                <tr>
                    <td>{{ item.customId }}</td>
                    <td>{{ item.name }}</td>
                    <td>Added today</td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3" class="text-center py-5 text-muted">
                        No items found. Click "+ Add New Item" to start.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}