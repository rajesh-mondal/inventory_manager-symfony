{% extends 'base.html.twig' %}

{% block title %}Add Item | {{ inventory.title }}{% endblock %}

{% block body %}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_my_inventories') }}" class="text-decoration-none text-muted small">{{ 'inventory_show.breadcrumb_list'|trans }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_inventory_show', {id: inventory.id}) }}" class="text-decoration-none text-muted small">{{ inventory.title }}</a></li>
                    <li class="breadcrumb-item active small">{{ 'item_form.new_item_title'|trans }}</li>
                </ol>
            </nav>

            <div class="form-container mt-4">
                <form method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-12">
                            <h3 class="section-title">{{ 'item_form.general_info'|trans }}</h3>
                            <div class="mb-5">
                                <label class="form-label">{{ 'item_form.item_name'|trans }}</label>
                                <input type="text" name="name" class="form-control" placeholder="Unique identifier for this item" required>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">{{ 'item_form.item_image'|trans }}</label>
                                <input type="file" name="image" class="form-control" accept="image/*">
                                <div class="form-text small">{{ 'item_form.image_help'|trans }}</div>
                            </div>
                        </div>

                        <div class="col-12">
                            <h3 class="section-title">{{ 'item_form.custom_specs'|trans }}</h3>
                            <div class="row g-4">

                                {% for type in ['String', 'Int', 'Bool', 'Text'] %}
                                    {% for i in 1..3 %}
                                        {% set stateMethod = 'custom' ~ type ~ i ~ 'State' %}
                                        {% set nameMethod = 'custom' ~ type ~ i ~ 'Name' %}

                                        {% if attribute(inventory, stateMethod) %}
                                            <div class="col-md-6">
                                                <label class="form-label text-primary">{{ attribute(inventory, nameMethod) }}</label>

                                                {% if type == 'String' %}
                                                    <input type="text" name="custom_string{{ i }}" class="form-control">
                                                {% elseif type == 'Int' %}
                                                    <input type="number" name="custom_int{{ i }}" class="form-control">
                                                {% elseif type == 'Text' %}
                                                    <textarea name="custom_text{{ i }}" class="form-control" rows="2"></textarea>
                                                {% elseif type == 'Bool' %}
                                                    <div class="form-check form-switch pt-2">
                                                        <input class="form-check-input" type="checkbox" name="custom_bool{{ i }}" id="bool_{{ i }}">
                                                        <label class="form-check-label small text-muted" for="bool_{{ i }}">{{ 'item_form.enabled'|trans }}</label>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="border-top mt-5 pt-4 d-flex justify-content-end">
                        <button type="submit" class="btn-save">
                            {{ 'item_form.create_button'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}