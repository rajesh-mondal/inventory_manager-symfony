{% extends 'base.html.twig' %}

{% block title %}Sync with Salesforce{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show shadow-sm mb-4" role="alert">
                        {% if label == 'success' %}<i class="fas fa-check-circle me-2"></i>{% endif %}
                        {% if label == 'error' %}<i class="fas fa-exclamation-circle me-2"></i>{% endif %}
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="form-container">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                        <i class="fab fa-salesforce fa-lg"></i>
                    </div>
                    <div>
                        <h2 class="section-title mb-0" style="border: none; padding: 0;">Salesforce Sync</h2>
                        <p class="text-muted small mb-0">Connect your local profile to the CRM</p>
                    </div>
                </div>

                <hr class="mb-4" style="color: #e5e7eb;">

                {{ form_start(syncForm) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(syncForm.firstName, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(syncForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'John'}}) }}
                            <div class="text-danger small">{{ form_errors(syncForm.firstName) }}</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(syncForm.lastName, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(syncForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Doe'}}) }}
                            <div class="text-danger small">{{ form_errors(syncForm.lastName) }}</div>
                        </div>
                    </div>

                    <div class="mb-4 mt-2">
                        <label class="section-label">Organization Details</label>
                        <div class="p-3 bg-light rounded-3 border border-dashed">
                            {{ form_label(syncForm.companyName, 'Company Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(syncForm.companyName, {'attr': {'class': 'form-control', 'placeholder': 'e.g. Acme Corp'}}) }}
                            <div class="text-danger small">{{ form_errors(syncForm.companyName) }}</div>
                            <div class="form-text text-muted extra-small mt-2">
                                <i class="fas fa-info-circle me-1"></i> This will create or link to an Account in Salesforce.
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn-save w-100 py-3 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sync-alt me-2"></i> Authorize & Sync Data
                        </button>
                    </div>
                {{ form_end(syncForm) }}

                <div class="text-center mt-4">
                    <a href="{{ path('app_my_inventories') }}" class="text-muted small text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Back to Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}