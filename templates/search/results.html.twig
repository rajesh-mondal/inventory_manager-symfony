{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <h3 class="fw-bold tracking-tight text-dark mb-1">
                {% if searchQuery and currentTag %}
                    {{ 'search_page.results_for'|trans }} "{{ searchQuery }}" {{ 'search_page.in'|trans }} #{{ currentTag }}
                {% elseif searchQuery %}
                    {{ 'search_page.results_for'|trans }} "{{ searchQuery }}"
                {% elseif currentTag %}
                    {{ 'search_page.tagged_with'|trans }} #{{ currentTag }}
                {% else %}
                    {{ 'search_page.all_title'|trans }}
                {% endif %}
            </h3>
            <p class="text-muted">
                {% if pagination.getTotalItemCount > 0 %}
                    {{ 'search_page.found_count'|trans({'%count%': pagination.getTotalItemCount}) }}
                {% else %}
                    {{ 'search_page.no_results_title'|trans }}
                {% endif %}
            </p>
        </div>
        <div class="d-flex gap-2">
            {% if searchQuery or currentTag %}
                <a href="{{ path('app_inventory_search') }}" class="btn btn-light border px-3 py-2 fw-bold rounded-3" style="border-radius: 8px;">
                    <i class="bi bi-x-circle"></i> {{ 'search_page.clear_filters'|trans }}
                </a>
            {% endif %}

            <a href="{{ path('app_home') }}" class="btn btn-outline-dark px-3 py-2 fw-bold rounded-3" style="border-radius: 8px;">
                <i class="bi bi-house-door"></i> {{ 'search_page.back_home'|trans }}
            </a>
        </div>
    </div>

    <div class="mb-4 d-flex justify-content-end">
        <form action="{{ path('app_inventory_search') }}" method="GET" class="search-wrapper" style="max-width: 400px;">
            <i class="bi bi-search search-icon"></i>
            <input type="text" name="q" class="search-input" value="{{ searchQuery }}" placeholder="{{ 'search_page.search_again'|trans }}">
            {% if currentTag %}<input type="hidden" name="tag" value="{{ currentTag }}">{% endif %}
        </form>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table mb-0 mb-0 align-middle">
                <thead>
                    <tr>
                        <th>{{ 'table.name'|trans }}</th>
                        <th class="d-none d-lg-table-cell">{{ 'table.tags'|trans }}</th>
                        <th class="d-none d-md-table-cell">{{ 'table.category'|trans }}</th>
                        <th class="text-end pe-4">{{ 'table.stored_items'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for inv in pagination %}
                    <tr class="align-middle inventory-row">
                        <td class="ps-4">
                            <div class="d-flex flex-column">
                                <a href="{{ path('app_inventory_show', {id: inv.id}) }}" class="inventory-link">{{ inv.title }}</a>
                                <span class="text-muted small mt-1 text-truncate d-inline-block">{{ inv.description|default('home.no_description'|trans)|slice(0, 50) }}...</span>
                            </div>
                        </td>
                        <td class="d-none d-lg-table-cell">
                            <div class="d-flex flex-wrap gap-1">
                                {% for tag in inv.tags %}
                                    <a href="{{ path('app_inventory_search', {tag: tag}) }}"
                                       class="badge rounded-pill bg-white text-muted border extra-small text-decoration-none">
                                       #{{ tag }}
                                    </a>
                                {% endfor %}
                            </div>
                        </td>
                        {# <td><span class="badge-category">{{ inv.category }}</span></td> #}
                        <td class="d-none d-md-table-cell">
                            <span class="badge-category">{{ inv.category ? inv.category.name : 'No Category' }}</span>
                        </td>
                        <td class="text-end pe-4">
                            <span class="item-count">{{ inv.items|length }}</span>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-search mb-3 d-block" style="font-size: 2rem; opacity: 0.3;"></i>
                                    <p class="mb-0">{{ 'search_page.no_results_body'|trans }}</p>
                                    <a href="{{ path('app_inventory_search') }}" class="btn btn-link text-dark fw-bold mt-2">{{ 'search_page.view_all'|trans }}</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-5 mb-4 small">
        <div class="minimal-pagination d-flex gap-1 align-items-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
{% endblock %}