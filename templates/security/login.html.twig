{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login_title'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card p-4">
            <h2 class="text-center mb-4 fw-bold">{{ 'auth.welcome_back'|trans }}</h2>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">{{ 'auth.email_label'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">{{ 'auth.password_label'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-100 mt-3" type="submit">
                    {{ 'auth.sign_in_btn'|trans }}
                </button>

                <div class="text-center text-muted">
                    <hr> <span>OR</span> <hr>
                </div>

                <a href="{{ path('connect_google_start') }}" class="btn btn-outline-dark w-100 mb-2">
                    <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="18" class="me-2">
                    Login with Google
                </a>

                <div class="text-center mt-3">
                    <small>{{ 'auth.no_account'|trans }}
                        <a href="{{ path('app_register') }}">{{ 'auth.register_link'|trans }}</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}